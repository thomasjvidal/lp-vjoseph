# Configurações de ambiente - VJOSEPH
# Copie este arquivo para .env.local e configure as variáveis

# Ambiente
NODE_ENV=production

# URLs
NEXT_PUBLIC_SITE_URL=https://vjoseph.com
NEXT_PUBLIC_APP_URL=https://vjoseph.com

# Segurança
NEXTAUTH_SECRET=your-super-secret-key-here
NEXTAUTH_URL=https://vjoseph.com

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-here

# Analytics
NEXT_PUBLIC_GA_ID=your-google-analytics-id
NEXT_PUBLIC_GTM_ID=your-google-tag-manager-id

# Email (se necessário)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Database (se necessário)
DATABASE_URL=your-database-url

# APIs externas
UNSPLASH_ACCESS_KEY=your-unsplash-access-key

# Configurações de cache
REDIS_URL=your-redis-url

# Monitoramento
UPTIME_ROBOT_API_KEY=your-uptime-robot-key
