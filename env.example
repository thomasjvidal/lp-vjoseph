# VJOSEPH - Configurações de Ambiente
# Copie este arquivo para .env.local e configure as variáveis

# Ambiente
NODE_ENV=production

# URLs
NEXT_PUBLIC_SITE_URL=https://vjoseph.com
NEXT_PUBLIC_APP_URL=https://vjoseph.com

# Segurança
NEXTAUTH_SECRET=your-super-secret-key-here-min-32-chars
NEXTAUTH_URL=https://vjoseph.com

# Email (exemplo com Resend)
RESEND_API_KEY=re_your_resend_api_key_here
FROM_EMAIL=noreply@vjoseph.com
TO_EMAIL=contato@vjoseph.com

# Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Rate Limiting (Redis - opcional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here

# APIs Externas
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_API_TOKEN=your_whatsapp_token

# Backup e Monitoramento
BACKUP_ENABLED=true
MONITORING_ENABLED=true

# Configurações de Performance
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_COMPRESSION_ENABLED=true

# Configurações de Cache
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Configurações de Segurança
MAX_REQUEST_SIZE=1048576
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_TIMEOUT=1800000

# Configurações de Desenvolvimento (apenas para dev)
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_MOCK_API=false
